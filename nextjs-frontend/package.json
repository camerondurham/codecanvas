{
  "name": "nextjs-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:prod-endpoint": "NEXT_PUBLIC_API_BASE_URL=https://runner.fly.dev/api/v1 NEXT_PUBLIC_APP_ENV=development NEXT_PUBLIC_DEBUG_MODE=true next dev",
    "dev:prod-env": "cp .env.dev-prod .env.local && next dev",
    "dev:local": "NEXT_PUBLIC_API_BASE_URL=http://localhost:10100/api/v1 NEXT_PUBLIC_APP_ENV=development NEXT_PUBLIC_DEBUG_MODE=true next dev",
    "dev:demo": "NEXT_PUBLIC_API_BASE_URL=http://demo-mode-no-api NEXT_PUBLIC_APP_ENV=development NEXT_PUBLIC_DEBUG_MODE=true next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "css:check": "echo 'Checking CSS bundle size...' && ls -la .next/static/css/ 2>/dev/null || echo 'Build first with: npm run build'",
    "perf:lighthouse": "echo 'Run Lighthouse performance audit manually on the deployed site'",
    "api:local": "node scripts/switch-api.js local",
    "api:prod": "node scripts/switch-api.js prod",
    "api:demo": "node scripts/switch-api.js demo",
    "api:validate": "node scripts/validate-prod-endpoint.js"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/basic-setup": "^0.20.0",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lang-cpp": "^6.0.0",
    "@codemirror/lang-go": "^6.0.0",
    "@codemirror/lang-javascript": "^6.0.0",
    "@codemirror/lang-python": "^6.0.0",
    "@codemirror/lang-rust": "^6.0.0",
    "@codemirror/language": "^6.11.3",
    "@codemirror/legacy-modes": "^6.5.1",
    "@codemirror/lint": "^6.8.5",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.0.0",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.0.0",
    "@lezer/highlight": "^1.2.1",
    "@uiw/codemirror-themes": "^4.25.1",
    "codemirror": "^6.0.0",
    "next": "^15.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "typescript": "^5.0.0"
  }
}
